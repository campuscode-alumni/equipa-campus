<h1>Equipamentos</h1>
<%= simple_form_for @equipment do |f| %>
  <%= f.association :equipment_category, label: 'Categoria'  %>
  <%= f.input :description, label: 'Modelo'  %>
  <%= f.input :serial_number, label: 'Número de Série'  %>
  <%= f.input :asset_number, label: 'Número de Inventário'  %>
  <%= f.input :acquisition_price, label: 'Valor do Equipamento'  %>
  <%= f.submit 'Incluir Equipamento' %>
<% end %>
